<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-4">Edit Post</h1>
  <%= form_with model: [@blog, @post], local: true do |form| %>
    <div class="mb-4">
      <%= form.label :content, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :content, class: "border rounded w-full py-2 px-3 text-gray-700 focus:outline-none focus:ring focus:border-blue-300" %>
    </div>
    <div>
      <%= form.submit 'Update Post', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  <%= link_to 'Back', @blog, class: "mt-4 inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
</div>
